{
  "name": "resume-maker",
  "version": "1.0.0",
  "description": "Modern resume maker with LaTeX support and live preview",
  "type": "module",
  "scripts": {
    "dev": "bun run --watch src/server.ts",
    "build": "bun build src/server.ts --outdir ./dist --target bun",
    "start": "bun run dist/server.js",
    "client:dev": "cd client && bun run dev",
    "client:build": "cd client && bun run build"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.971.0",
    "@elysiajs/cookie": "^0.8.0",
    "@elysiajs/cors": "^1.1.0",
    "@elysiajs/jwt": "^1.1.0",
    "@elysiajs/static": "^1.1.0",
    "@prisma/client": "^5.22.0",
    "@types/adm-zip": "^0.5.7",
    "adm-zip": "^0.5.16",
    "arctic": "^1.9.2",
    "bcrypt": "^5.1.1",
    "elysia": "^1.1.0",
    "mailersend": "^2.2.0",
    "mammoth": "^1.8.0",
    "openai": "^6.16.0",
    "pdf-parse": "^1.1.1",
    "pg": "^8.17.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/bun": "latest",
    "@types/node": "^20.10.0",
    "prisma": "^5.22.0"
  }
}
